<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <Button
            android:text="@string/select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="320dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp"/>
    <ImageView
            android:layout_width="136dp"
            android:layout_height="156dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="137dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="123dp"/>
    <Button
            android:text="@string/get_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/button1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="112dp"/>

    <TextView
            android:text="@string/response_string"
            android:layout_width="73dp"
            android:layout_height="34dp"
            android:id="@+id/textView"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="168dp" android:textSize="24sp" android:textColor="#000000"/>


</androidx.constraintlayout.widget.ConstraintLayout>